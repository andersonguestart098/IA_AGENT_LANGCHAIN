generator client {
  provider = "prisma-client-py"
  output   = "../app/generated"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model KnowledgeBase {
  id        Int      @id @default(autoincrement())
  origem    String
  conteudo  String
  embedding String
  criadoEm  DateTime @default(now())
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String?
  email    String?  @unique
  criadoEm DateTime @default(now())

  sessoes Sessao[]
}

model Sessao {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  usuario   Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId Int?
  criadoEm  DateTime @default(now())

  mensagens Mensagem[]
  fluxo     FluxoConversa[]
}

model FluxoConversa {
  id       Int      @id @default(autoincrement())
  sessao   Sessao   @relation(fields: [sessaoId], references: [id])
  sessaoId Int
  etapa    String
  intencao String
  pedido   String?
  criadoEm DateTime @default(now())
}

model Mensagem {
  id       Int      @id @default(autoincrement())
  sessao   Sessao   @relation(fields: [sessaoId], references: [id])
  sessaoId Int
  texto    String
  role     String // "user" ou "ai"
  criadoEm DateTime @default(now())
}
